@model List<EssentialOilsCapstone.Models.Property>

<div class="px-5 py-5">
    <h1 class="mb-sm-0">Oil Properties</h1><br />

    @if (Model.Count == 0)
    {
        <p>No properties added yet.</p>
    }
    else
    {
        <a asp-controller="Property" asp-action="Add" class="btn btn-secondary btn-sm mb-4">Add Another Property</a>
        <table class="table">
            <tr>
                @*<th>ID</th>*@
                <th>Name</th>
                <th>Delete</th>
            </tr>
            @foreach (var p in Model)
            {
                <tr>
                    @*<td>@p.Id</td>*@
                    <td>@p.Name</td>
                    <td><form action="/Property/DeleteProperty" method="post"><input type="hidden" name="propertyIds" value="@p.Id" /><input type="submit" class="btn btn-danger" value="X"></form></td>
                </tr>
            }
        </table>
    }
</div>