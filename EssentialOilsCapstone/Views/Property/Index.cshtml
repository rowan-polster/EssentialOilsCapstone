@model List<EssentialOilsCapstone.Models.Property>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EssentialOilsCapstone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/search-custom.css" />
    <script src="search-custom-bootstrap.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
</head>

<div class="px-5 py-5">
    <h1 class="mb-sm-0">Oil Properties</h1><br />

    @if (Model.Count == 0)
    {
        <p>No properties added yet.</p>
    }
    else
    {
        <a asp-controller="Property" asp-action="Add" class="btn btn-secondary btn-sm mb-4">Add Another Property</a>
        <table class="table">
            <tr>
                @*<th>ID</th>*@
                <th>Name</th>
                <th>Delete</th>
            </tr>
            @foreach (var p in Model)
            {
                <tr>
                    @*<td>@p.Id</td>*@
                    <td>@p.Name</td>
                    <td><form action="/Property/DeleteProperty" method="post"><input type="hidden" name="propertyIds" value="@p.Id" /><input type="submit" class="btn btn-danger" value="X"></form></td>
                </tr>
            }
        </table>
    }
</div>