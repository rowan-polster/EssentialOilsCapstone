@model EssentialOilsCapstone.ViewModels.AddPropertyViewModel

<div class="px-5 py-5">
    <h1 class="fw-bolder mb-4">Add New Property</h1>

    <form asp-controller="Property" asp-action="Add" method="post">
        <div class="form-group">
            <h5>
                <label asp-for="Name">Property Name:</label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </h5>
        </div>
        <input type="submit" class="btn btn-success btn-lg mt-1" value="Submit" />
    </form>
</div>

