@model EssentialOilsCapstone.ViewModels.AddPropertyViewModel

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EssentialOilsCapstone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/search-custom.css" />
    <script src="search-custom-bootstrap.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
</head>

<div class="px-5 py-5">
    <h1 class="fw-bolder mb-4">Add New Property</h1>

    <form asp-controller="Property" asp-action="Add" method="post">
        <div class="form-group">
            <h5>
                <label asp-for="Name">Property Name:</label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </h5>
        </div>
        <input type="submit" class="btn btn-success btn-lg mt-1" value="Submit" />
    </form>
</div>

