<body>
    <h1 class="fw-bolder mb-sm-0">@ViewBag.title</h1><br />
    <form method="post" action="/Admin/Edit">
        <input type="hidden" value="@ViewBag.oilId" name="oilId" />
        <h5>
            <label for="name">Oil Name: </label>
            <input name="name" type="text" value="@ViewBag.oil.Name" /><br />
        </h5>
        <h5>
            <label for="description">Description: </label>
            <input name="description" type="text" value="@ViewBag.oil.Description" /><br />
        </h5>
        <h5 class="mb-sm-0">Properties:</h5>
        <div class="form-group">
            @foreach (Property property in ViewBag.allProperties)
            {
                if (ViewBag.theProperties.Contains(property))
                {
                    <br /><label for="@property.Id">@property.Name</label>
                    <input type="checkbox" name="newProperties" value="@property.Id" checked />
                }
                else
                {
                    <br /><label for="@property.Id">@property.Name</label>
                    <input type="checkbox" name="newProperties" value="@property.Id" />
                }
            }
            <br /><a asp-controller="Property" asp-action="Add" class="btn btn-secondary btn-sm">Add Another Property</a>
            <br />
            <input type="submit" class="btn btn-success btn-lg mt-4" value="Submit" />
        </div>
    </form>
</body>