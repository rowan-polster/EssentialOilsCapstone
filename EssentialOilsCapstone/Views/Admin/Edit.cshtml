<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EssentialOilsCapstone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/search-custom.css" />
    <link rel="stylesheet" href="~/css/custom.css" />

    @*<script src="search-custom-bootstrap.js"></script>*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
</head>
<div class="px-5 py-5">
    <h1 class="fw-bolder mb-sm-0">@ViewBag.title</h1><br />
    <form method="post" action="/Admin/Edit">
        <input type="hidden" value="@ViewBag.oilId" name="oilId" />
        <h5>
            <label for="name">Oil Name: </label>
            <input name="name" type="text" value="@ViewBag.oil.Name" /><br />
        </h5>
        <h5>
            <label for="description">Description: </label>
            <input name="description" type="text" value="@ViewBag.oil.Description" /><br />
        </h5>
        <h5 class="mb-sm-0">Properties:</h5>
        <div class="form-group">
            @foreach (Property property in ViewBag.allProperties)
            {
                if (ViewBag.theProperties.Contains(property))
                {
                    <br /><label for="@property.Id">@property.Name</label>
                    <input type="checkbox" name="newProperties" value="@property.Id" checked />
                }
                else
                {
                    <br /><label for="@property.Id">@property.Name</label>
                    <input type="checkbox" name="newProperties" value="@property.Id" />
                }
            }
            <br /><a asp-controller="Property" asp-action="Add" class="btn btn-secondary btn-sm">Add Another Property</a>
            <br />
            <input type="submit" class="btn btn-success btn-lg mt-4" value="Submit" />
        </div>
    </form>
</div>

