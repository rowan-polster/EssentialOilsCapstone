@using EssentialOilsCapstone.ViewModels;
@using EssentialOilsCapstone.Models;

@model AddOilViewModel;
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EssentialOilsCapstone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/search-custom.css" />
    <script src="search-custom-bootstrap.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
</head>
<div class="px-5 py-5">
    <h1 class="fw-bolder mb-sm-0">Add Essential Oil</h1><br />

    <form method="post" asp-controller="Admin" asp-action="AddEntry">
        <div class="form-group">
            <h5 class="mb-sm-0">
                <label asp-for="Name">Oil Name: </label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </h5>
        </div>
        <div class="form-group">
            <h5 class="mb-sm-0">
                <label asp-for="Description">Description: </label>
                <input asp-for="Description" />
                <span asp-validation-for="Description"></span>
            </h5>
        </div>
        <div class="form-group">
            <h5 class="mb-sm-0">Properties:</h5>
            @*<label asp-for="Properties">Properties: </label>*@
            @foreach (Property property in Model.Properties)
            {
                <br /><label for="@property.Id">@property.Name</label>
                <input type="checkbox" name="selectedProperties" value="@property.Id" />
            }
            <br /><a asp-controller="Property" asp-action="Add" class="btn btn-secondary btn-sm">Add Another Property</a>
            <br />
            <input type="submit" class="btn btn-success btn-lg mt-4" value="Submit" />
        </div>
    </form>
</div>

